<html lang="en">
  <head>
    {{> head }}
    <title>Amrita Trees | Inventory</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <script src="/js/app.js" type="module"></script>

<body class="w-screen h-screen relative bg-slate-800 overflow-hidden">
  <div id="TailwindRequiredStyles" class="hidden translate-x-[300px]">

  </div>

  <div id="contentWrapper" style="width:110vw;" class="w-screen relative transition-all">
    <div id="inventory" style="height: 100vh;width:100%;transform:translateX(-5vw);">
        <div class="w-full h-full bg-green-500 justify-center p-4 pt-16 flex flex-col items-center gap-8 overflow-y-auto">
            <div id="inventoryTabBar" class="w-96 h-16 grid grid-cols-3 bg-green-700 items-center rounded-full">
                <div class="text-center">
                    {{!-- EVENTS --}}
                    </div>
                <div class="text-center w-full">
                    <h1 class="text-3xl font-bold text-white">TREES</h1>
                    <h3 class="text-xl font-mono text-gray-300">{{ account.count}}/{{ game.maxCount }}</h3>
                </div>
                <div class="text-center">
                    {{!-- QUESTS --}}
                    </div>
            </div>
            <div id="inventoryList" class="w-full h-full px-10 md:px-30 lg:px-60">
                <div class="grid place-items-center  grid-cols-3 gap-y-5 md:gap-y-10">
                    {{#collection.found}}

                    <div class="w-24 h-24 md:w-48 md:h-48 lg:w-64 lg:h-64 bg-red-300">
                        {{this.name}}
                        {{this.icon}}
                    </div>
                    {{/collection.found}}                        
                </div>
            </div>
        </div>
    </div>
    <div id="contentOverlay" style="z-index:999;width:100%;transform:translateX(-5vw);" class="h-screen absolute top-0 left-0 bg-black opacity-20 hidden">

    </div>
  </div>

  {{> gameNavbar}}

  {{> sideBar }}
</body>
</html>