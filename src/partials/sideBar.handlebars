<div
  id="sideBar"
  style="z-index:999"
  class="h-full w-[300px] transition-all fixed top-0 translate-x-[-300px] bg-gradient-to-r from-slate-800 via-slate-800 via-95% to-transparent to-95%"
>
  <div class="flex flex-col items-center justify-between h-full w-full">
    <div
      class="flex mt-2 p-4 w-full questionBackgroundGradient rounded-e-lg border-black border-2 border-l-0"
    >
      <div class="flex flex-col items-center justify-center">
        <img
          class="w-16 h-16 rounded-full"
          src="/assets/profile.jpg"
          alt="Profile picture"
        />
      </div>
      <div class="select-none flex flex-col items-start justify-center ml-4">
        <h1
          class="truncate text-xl font-bold mt-2 text-white"
        >{{account.name}}</h1>
        <h2 class="text-xl text-gray-200 flex flex-row">
          <img
            style="mix-blend-mode: color-dodge;"
            src="/assets/game/currency.png"
            class="nodrag h-5 aspect-square translate-y-1"
          />{{account.score}}
          points</h2>
      </div>
    </div>

    <div class="w-11/12 pr-4 py-2">

      <a
        href="/leaderboards"
        style="color: #9f6c34;background-image: linear-gradient(25deg,#f9c04d,#fffa7c);"
        class="select-none flex niconne-regular justify-center items-center h-14 w-11/12 p-4 mx-auto relative capitalize text-3xl rounded-full border-2 border-black ring-2 ring-offset-2 ring-white active:translate-y-1 transition-all"
      >Leaderboards</a>
    </div>
    <div class="w-11/12 pr-4 py-2">

      <br />

      <div class="flex flex-col mt-auto w-full pb-2">
        <a
          href="/admin"
          class="text-gray-400 font-bold hover:text-gray-100 px-4 py-2 border-gray-100 hover:border-l-4"
        >ADMIN</a>
        <div
          class="text-gray-400 hover:text-gray-100 px-4 pb-2 font-bold border-gray-100 hover:border-l-4 "
        >SETTINGS</div>
        {{> gameSettings }}
        <a
          href="#"
          class="text-gray-400 font-bold hover:text-gray-100 px-4 py-2 border-gray-100 hover:border-l-4"
        >LOGOUT</a>
      </div>

    </div>
  </div>
</div>