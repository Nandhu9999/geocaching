<div
  id="sideBar"
  style="z-index:999"
  class="h-full w-[300px] transition-all fixed top-0 translate-x-[-300px] bg-gradient-to-r from-slate-800 via-slate-800 via-95% to-transparent to-95%"
>
  <div class="flex flex-col items-center justify-between h-full w-full">
    <div
      class="flex mt-2 p-4 w-full questionBackgroundGradient rounded-e-lg border-black border-2 border-l-0"
    >
      <div class="flex flex-col items-center justify-center">
        <img
          class="w-16 h-16 rounded-full"
          src="/assets/profile.jpg"
          alt="Profile picture"
        />
      </div>
      <div class="select-none flex flex-col items-start justify-center ml-4">
        <h1
          class="truncate text-xl font-bold mt-2 text-white"
        >{{account.name}}</h1>
        <h2 class="text-xl text-gray-200 flex flex-row">
          <img
            style="mix-blend-mode: color-dodge;"
            src="/assets/game/currency.png"
            class="nodrag h-5 aspect-square translate-y-1"
          />{{account.score}}
          points</h2>
      </div>
    </div>

    <div class="w-11/12 pr-4 py-2">

      <a
        href="/leaderboards"
        style="color: #9f6c34;background-image: linear-gradient(25deg,#f9c04d,#fffa7c);"
        class="flex niconne-regular justify-center items-center h-14 w-11/12 p-4 mx-auto relative capitalize text-3xl rounded-full border-2 border-black ring-2 ring-offset-2 ring-white active:translate-y-1 transition-all"
      >Leaderboards</a>
    </div>
    <div class="w-11/12 pr-4 py-2">

      <br />

      <div class="flex flex-col mt-auto w-full pb-2">
        <div
          class="text-gray-400 hover:text-gray-100 px-4 pb-2 font-bold"
        >SETTINGS</div>
        <ul class="text-gray-400 pl-4 pr-4">
          <label
            class="select-none hover:text-gray-200 py-2 flex flex-row items-center justify-between"
          >
            <span class="flex flex-row gap-1 h-full items-center">
              <span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  class="w-5 h-5"
                  viewBox="0 0 16 16"
                >
                  {{! <path
                    d="M11.536 14.01A8.47 8.47 0 0 0 14.026 8a8.47 8.47 0 0 0-2.49-6.01l-.708.707A7.48 7.48 0 0 1 13.025 8c0 2.071-.84 3.946-2.197 5.303z"
                  /> }}
                  <path
                    d="M10.121 12.596A6.48 6.48 0 0 0 12.025 8a6.48 6.48 0 0 0-1.904-4.596l-.707.707A5.48 5.48 0 0 1 11.025 8a5.48 5.48 0 0 1-1.61 3.89z"
                  />
                  <path
                    d="M8.707 11.182A4.5 4.5 0 0 0 10.025 8a4.5 4.5 0 0 0-1.318-3.182L8 5.525A3.5 3.5 0 0 1 9.025 8 3.5 3.5 0 0 1 8 10.475zM6.717 3.55A.5.5 0 0 1 7 4v8a.5.5 0 0 1-.812.39L3.825 10.5H1.5A.5.5 0 0 1 1 10V6a.5.5 0 0 1 .5-.5h2.325l2.363-1.89a.5.5 0 0 1 .529-.06"
                  />
                </svg>
              </span>
              <span>
                Sounds
              </span>
            </span>
            <span>
              <input type="checkbox" />
            </span></label>
          <label
            class="select-none hover:text-gray-200 py-2 flex flex-row items-center justify-between"
          >
            <span class="flex flex-row gap-1 h-full items-center">
              <span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  class="w-4 h-4"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M8 16a2 2 0 0 0 2-2H6a2 2 0 0 0 2 2m.995-14.901a1 1 0 1 0-1.99 0A5 5 0 0 0 3 6c0 1.098-.5 6-2 7h14c-1.5-1-2-5.902-2-7 0-2.42-1.72-4.44-4.005-4.901"
                  />
                </svg>
              </span>
              <span>
                Notifications
              </span>
            </span>
            <span>
              <input type="checkbox" />
            </span></label>
          {{#if account.admin}}
            <label
              class="select-none hover:text-gray-200 py-2 flex flex-row items-center justify-between"
            >
              <span class="flex flex-row gap-1 h-full items-center">
                <span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor"
                    class="w-4 h-4"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0m6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0"
                    />

                  </svg>
                </span>
                <span>
                  Live Location
                </span>
              </span>
              <span>
                <input type="checkbox" />
              </span></label>
            <label
              class="select-none hover:text-gray-200 py-2 flex flex-row items-center justify-between"
            >
              <span class="flex flex-row gap-1 h-full items-center">
                <span>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor"
                    class="w-4 h-4"
                    viewBox="0 0 16 16"
                  >
                    <path
                      d="M10.478 1.647a.5.5 0 1 0-.956-.294l-4 13a.5.5 0 0 0 .956.294zM4.854 4.146a.5.5 0 0 1 0 .708L1.707 8l3.147 3.146a.5.5 0 0 1-.708.708l-3.5-3.5a.5.5 0 0 1 0-.708l3.5-3.5a.5.5 0 0 1 .708 0m6.292 0a.5.5 0 0 0 0 .708L14.293 8l-3.147 3.146a.5.5 0 0 0 .708.708l3.5-3.5a.5.5 0 0 0 0-.708l-3.5-3.5a.5.5 0 0 0-.708 0"
                    />

                  </svg>
                </span>
                <span>
                  Developer Control
                </span>
              </span>
              <span>
                <input type="checkbox" />
              </span></label>
          {{/if}}
        </ul>
        <a
          href="#"
          class="text-gray-400 font-bold hover:text-gray-100 px-4 py-2"
        >LOGOUT</a>
      </div>

    </div>
  </div>
</div>